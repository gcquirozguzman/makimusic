<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MetodoPagoActivity"
    android:layout_margin="40dp">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MÃ©todo de Pago"
        android:textSize="40sp"
        android:fontFamily="@font/pinky"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView">

        <RadioButton
            android:id="@+id/rbEfectivo"
            android:background="@drawable/casilla"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="20dp"
            android:drawableRight="@drawable/efectivo"
            android:layout_marginBottom="15dp"
            android:text="Efectivo">
        </RadioButton>

        <RadioButton
            android:id="@+id/rbVisa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="20dp"
            android:drawableRight="@drawable/visa"
            android:layout_marginBottom="15dp"
            android:background="@drawable/casilla"
            android:text="xxxx-xxxx-xxxx-1234" />

        <RadioButton
            android:id="@+id/rbMC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/casilla"
            android:layout_marginBottom="15dp"
            android:paddingRight="20dp"
            android:drawableRight="@drawable/mc"
            android:text="xxxx-xxxx-xxxx-2345" />

        <RadioButton
            android:id="@+id/rbAmex"
            android:layout_width="match_parent"
            android:background="@drawable/casilla"
            android:layout_height="wrap_content"
            android:paddingRight="20dp"
            android:drawableRight="@drawable/amex"
            android:text="xxxx-xxxx-xxxx-3456" />

    </RadioGroup>


    <Button
        android:id="@+id/btnPagar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Pagar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>